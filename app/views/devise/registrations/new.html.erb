<div class="page-header">
  <h1>Sign up</h1>
</div>

<div class="alert alert-info">
  <strong>Note</strong>: Idle Herder is currently in very early testing, and is not yet open for general signups. See the <%= link_to 'About page', about_path %> for more details.
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'devise-form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :player_name %>
    <%= link_to image_tag('help-icon.png', size: '16x16'), '#', { 'class' => 'tooltip-qm', 'data-toggle' => 'tooltip', 'title' => 'The player name on your primary game account. You can change this and add other accounts later.' }  %>
    <%= f.text_field :player_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :invitation_code %>
    <%= f.text_field :invitation_code, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
