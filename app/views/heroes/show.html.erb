<% if @hero.image_file %>
  <%= image_tag "heroes/#{@hero.image_file}" %>
<% end %>
<h1><%= @hero.name %></h2>
<h2><%= "#{@hero.stars}â˜… #{@hero.faction} #{@hero.role}" %></h2>
<ul>
  <li><%= link_to 'Wiki', @hero.wiki_url %></li>
  <% [:power, :health, :attack, :armor, :speed].each do |stat| %>
    <% if v = @hero.send(stat) %>
      <li><%= "#{stat.to_s.capitalize}: #{v}" %></li>
    <% end %>
  <% end %>
</ul>
