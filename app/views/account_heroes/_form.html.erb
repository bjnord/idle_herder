<%= form_for(@account_hero, remote: request.xhr?, html: { data: { modal: request.xhr? }, class: request.xhr? ? '' : 'devise-form' }) do |f| %>
  <div class="fields <%= request.xhr? ? 'modal-body' : '' %>">
    <div class="form-group">
      <%= f.label :hero_id %><br />
      <%= f.text_field :hero_id, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :level %><br />
      <%= f.text_field :level, autofocus: true, class: 'form-control' %>
    </div>

    <%= f.hidden_field :shards, value: 0 %>
  </div>

  <div class="actions <%= request.xhr? ? 'modal-footer' : '' %>">
    <%= f.submit 'Add', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
