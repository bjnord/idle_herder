<div class="container-fluid">
  <div class="row no-gutters">
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :level %><br />
        <%= f.text_field :level, value: empty_integer(@account_hero.level), class: 'form-control', style: 'width: 95%;' %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :shards %><br />
        <%= f.text_field :shards, value: empty_integer(@account_hero.shards), class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-8">&nbsp;</div>
  </div>
  <div class="row no-gutters" style="margin-bottom: 8px;">
    <div class="col-sm-2">
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :is_fodder, class: 'form-check-input' %>
          <%= f.label :is_fodder %><br />
        </label>
      </div>
    </div>
    <div class="col-sm-10">&nbsp;</div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#account_hero_level").on('input', function () {
      $("#account_hero_shards").val('');
    });
    $("#account_hero_shards").on('input', function () {
      $("#account_hero_level").val('');
    });
  });
</script>
